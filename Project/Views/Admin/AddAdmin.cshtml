@model ApplicationUserViewModel

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <h6 class="mb-4">Add New Admin</h6>

        <form method="post" asp-action="AddAdmin" asp-controller="Admin">
            <div class="mb-3">
                <input type="text" class="form-control" id="firstName" asp-for="FirstName" placeholder="First Name" required>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" id="lastName" asp-for="LastName" placeholder="Last Name" required>
            </div>
            <div class="mb-3">
                <input type="number" class="form-control" id="phoneNumber" asp-for="PhoneNumber" placeholder="phone Number" required>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" id="address" asp-for="Address" placeholder="Address" required>
            </div>
            <div class="mb-3">
                <input type="email" class="form-control" id="email" asp-for="Email" placeholder="Email" required>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" id="password" asp-for="Password" placeholder="Password" required>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="@Url.Action("GetAll", "Admin")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
