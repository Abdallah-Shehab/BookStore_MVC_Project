@model List<BookDetailsVM>
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<button class="btn btn-primary addBook" href="/Dashboard/AddNewBook"> <i class="fa-duotone fa-books-medical"></i> Add New Book</button> 


<div>
    <table id="myTable" class="display">
        <thead>
            <tr>
                <th></th>
                <th>ID</th>
                <th>Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>Rate</th>
                <th>Price</th>
                <th>Discount</th>
                <th>Quantity</th>
                <th>Author</th>
                <th>Category</th>
                <th>Added by</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> <i class="fa-solid fa-info" onclick="BookInfo(@item.ID)" title="Book Details" style="color:#009CFF" data-bs-toggle="modal" data-bs-target="#info"></i> </td>
                    <td>@item.ID</td>
                    <td>@item.Image</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Rate</td>
                    <td>@item.Price</td>
                    <td>@item.Discount.Percantage %</td>
                    <td>@item.Quantity</td>
                    <td>@item.Author.Name</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Admin.FirstName @item.Admin.LastName</td>
                    <td>
                        <i class="fa-solid fa-pen-to-square" title="Edit" style="color:#009CFF"></i>
                        <i class="fa-solid fa-trash" title="Delete" style="color:red"></i>
                        <i class="fa-regular fa-comment-dots" title="Show Comments" style="color:green"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




@* info icon *@
<div class="modal fade" id="info" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Book Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body bookInfo">

                <section class="product">
                    <div class="product__photo">
                        <div class="photo-container">
                            <div class="photo-main">
                                <img src="~/assets/images/books/morgan-housel-aZ_MmSmAcjg-unsplash.jpg">
                            </div>
                        </div>
                    </div>
                    <div class="product__info">
                        <div class="title">
                            <h1 id="bookTitle"> </h1>
							<span>Book ID:</span> <span id="bookId"> </span>
                        </div>
                     
                        <div class="description">
                            <h3>Price</h3>
                            <span id="bookPrice"> </span> $
                        </div>
                        <div class="description">
                            <h3>Discount</h3>
                            <span id="bookDiscount"> </span> %
                        </div>
                        <div class="description">
                            <h3>Quantity</h3>
                            <span id="bookQuant"> </span>
                        </div>
                        <div class="description">
                            <h3>Category</h3>
                            <span id="bookCategory"> </span>
                        </div>
                        <div class="description">
                            <h3>Author</h3>
                            <span id="bookAuthor"> </span>
                        </div>
                        
                        <div class="description">
                            <h3>Added By / Admin Name</h3>
                            <span id="bookAdmin"> </span>
                        </div>
                        <div class="description">
                            <h3>Description</h3>
                            <span id="bookDesc"> </span>
                        </div>
                        
                        <div id="btns">
                            <button class="buy--btn" style="background-color:#009CFF"><i class="fa-solid fa-pen-to-square"></i> Update</button>
                            <button class="buy--btn" style="background-color:green"><i class="fa-regular fa-comment-dots"></i> Show Comments</button>
                            <button class="buy--btn"><i class="fa-solid fa-trash"></i> Delete</button>

                        </div>
                    </div>
                </section>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default" ta-dismiss="modal">close</button>
            </div>
        </div>
    </div>
</div>