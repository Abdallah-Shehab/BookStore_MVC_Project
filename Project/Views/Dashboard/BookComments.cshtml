@model List<CommentVM>
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



<a class="btn btn-outline-primary m-2" href="/Dashboard/Books"> <i class="fa-solid fa-backward"></i> Back To All Books</a>


<h3>Reviews of (@ViewBag.BookName)</h3>

<div>
    <table id="myTable" class="display commentsTable">
        <thead>
            <tr>
                <th>User ID</th>
                <th>User Name</th>
                <th>Date</th>
                <th>Rate</th>
                <th>Comment</th>
                <th>Status</th>
                <th>Hide/Show</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.user_id</td>
                    <td>@item.userFName @item.userLName</td>
                    <td>@item.Date</td>
                    <td>@item.rate /10</td>
                    <td>@item.Comment</td>
                    <td></td>
                    <td>
                        <i class="fa-solid fa-eye" title="Show" style="color:#009CFF"></i> @* if this icon is visible, so the comment is hidden from the public and want to click on it to show comment to the public*@
                        <i class="fa-regular fa-eye-slash" title="Hide" style="color:red"></i> @* comment is shown and want to hide it*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>